<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lin.guess.Guess">

    <TextView
        android:id="@+id/text_secnumber"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:text="神秘數字(1~100)"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_input"
        android:layout_width="160dp"
        android:layout_height="34dp"
        android:layout_marginTop="44dp"
        android:text="請輸入數字 :"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/text_secnumber"
        app:layout_constraintTop_toBottomOf="@+id/text_secnumber" />

    <EditText
        android:id="@+id/ed_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/text_input"
        app:layout_constraintTop_toBottomOf="@+id/text_input" />

    <Button
        android:id="@+id/bu_ok"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="72dp"
        android:onClick="ok"
        android:text="確定"
        app:layout_constraintStart_toStartOf="@+id/ed_input"
        app:layout_constraintTop_toBottomOf="@+id/ed_input" />

    <TextView
        android:id="@+id/text_small"
        android:layout_width="88dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_input"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bu_ok"
        app:layout_constraintTop_toTopOf="@+id/bu_ok"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
